<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_18sdp">

    <EditText
        android:id="@+id/verify_otp_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="16sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/vo_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/raleway"
        android:text="Submit"
        android:textColor="@color/white"
        android:theme="@style/Theme.Material3.Dark" />

    <TextView
        android:id="@+id/how_to_tv_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/raleway"
        android:gravity="end"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingStart="@dimen/_3sdp"
        android:text="How to?"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/how_to_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/raleway"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingStart="@dimen/_3sdp"
        android:text="To get this OTP you need to open Smart Lit App in the parent user of this device.\nGo to their Rooms list (by clicking more button on the top-right corner then Rooms) and then click the share icon of the room with the same device/room id. "
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>